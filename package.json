{
  "name": "@adesso-forge/adforge-shared",
  "version": "1.2.4",
  "description": "Shared build tooling, Storybook config, and token utilities for adesso forge",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./build/vite-config": "./dist/build/vite.config.base.js",
    "./build/tsconfig": "./src/build/tsconfig.base.json",
    "./storybook/main": "./dist/storybook/main.js",
    "./storybook/preview": "./dist/storybook/preview.js",
    "./tokens/*": "./dist/tokens/*.js",
    "./components/*": "./dist/components/*.js",
    "./lint/eslint": "./dist/lint/eslint.config.js",
    "./lint/prettier": "./dist/lint/prettier.config.js",
    "./testing/vitest": "./dist/testing/vitest.config.js"
  },
  "files": [
    "dist/",
    "src/build/tsconfig.base.json"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist/"
  },
  "dependencies": {
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-lit": "^2.0.0",
    "eslint-plugin-wc": "^2.2.0",
    "fast-glob": "^3.3.3",
    "typescript-eslint": "^8.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@storybook/addon-a11y": "^10.0.0",
    "@storybook/addon-docs": "^10.0.0",
    "@storybook/web-components-vite": "^10.0.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "lit": "^3.2.0",
    "prettier": "^3.0.0",
    "semantic-release": "^25.0.0",
    "storybook": "^10.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0"
  },
  "peerDependencies": {
    "@awesome.me/webawesome": "^3.2.0",
    "lit": "^3.2.0",
    "vite": "^6.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adesso-forge/adforge-shared.git"
  }
}
